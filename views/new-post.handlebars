<div class="card">
    <h3 class="card-header">New Post</h3>
    <form class="card-body enew-post-form" id="new-post-form">
        <div class="m-3">
            <label for="post-title" class="form-label">Title</label>
            <input name="post-title" type="text" id='title' value="{{post.title}}" class="form-input" />
        </div>
        <div class="m-3">
            <textarea class="form-label" for="content" id='content'cols="60" rows="10">Put your post here!</textarea>
        </div>
        <div class="m-3">
            <button type="submit" class="btn btn-primary btn-sms">Submit</button>
        </div>
    </form>
</div>
<script src="/js/new-post.js"></script>