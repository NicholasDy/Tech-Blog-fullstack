<div class="card m-3 p-2 project">
    <div class="">
        <h2>{{blogposts.title}}</h2>
        <p>Created by {{blogposts.user.name}} on {{format_date blogposts.createdAt}}</p>
    </div>
    <div>
        <a href="/comment/{{blogposts.id}}"><button type="submit" class="btn btn-primary btn-sm">Leave a Comment</button></a>
    </div>
</div>

<h2>Comments</h2>
{{#each blogposts.comments as |comment|}}
<div class="card p-3 m-3">
    <h5>
        {{comment.user.name}} - Posted on {{format_date comment.createdAt}}
    </h5>
    <p>
        {{comment.content}}
    </p>
</div>
{{/each}}

<script src="/js/comment.js"></script>